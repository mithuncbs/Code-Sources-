#include <iostream>
#include <vector>
using namespace std;

int main()
{
    int T;
    while (cin >> T && T != 0)
    {
        vector<int> suspects(T);
        for (int i = 0; i < T; i++)
        {
            cin >> suspects[i];
        }
        int max1 = 0, max2 = 0;
        for (int i = 0; i < T; i++)
        {
            if (suspects[i] > max1)
            {
                max2 = max1;
                max1 = suspects[i];
            }
            else if (suspects[i] > max2)
            {
                max2 = suspects[i];
            }
        }
        for (int i = 0; i < T; i++)
        {
            if (suspects[i] == max2)
            {
                cout << i + 1 << endl;
                break;
            }
        }
    }
    return 0;
}
