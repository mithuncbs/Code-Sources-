#include <iostream>
using namespace std;

int main()
{
    int N;
    while (cin >> N)
    {
        if (N > 2 && N < 100)
        {
            int temp = 0;
            int M = (N - 1) / 2;
            for (int i = 0; i < N; i += 2)
            {

                for (int j = temp; j < M; j++)
                {
                    cout << " ";
                }
                temp++;
                for (int k = 0; k < i + 1; k++)
                {
                    cout << "*";
                }
                cout << endl;
            }
            for (int i = 0; i < M; i++)
            {
                cout << " ";
            }
            cout << "*" << endl;
            for (int i = 0; i < M - 1; i++)
            {
                cout << " ";
            }
            cout << "***" << endl;
            cout << endl;
        }
    }
    return 0;
}
