#include <iostream>
#include <cmath>
#include <vector>
using namespace std;

int main()
{
    int N;
    cin >> N;
    while (N--)
    {
        int QT, S;
        cin >> QT >> S;
        vector<int> gusses(QT);
        for (int i = 0; i < QT; i++)
        {
            cin >> gusses[i];
        }

        int winnIndex = 0;
        int minDiff = abs(S - gusses[0]);
        for (int i = 1; i < QT; i++)
        {
            int diff = abs(S - gusses[i]);
            if (diff < minDiff)
            {
                minDiff = diff;
                winnIndex = i;
            }
        }
        cout << winnIndex + 1 << endl;
    }
    return 0;
}
